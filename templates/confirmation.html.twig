{% extends 'base.html.twig' %}

{% block content %}
    <div class="card text-center">
        <div class="card-header bg-success text-white">
            <h2 class="mb-0">Registration Successful!</h2>
        </div>
        <div class="card-body">
            <div class="mb-4">
                <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" fill="#28a745" class="bi bi-check-circle-fill" viewBox="0 0 16 16">
                    <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"/>
                </svg>
            </div>
            <h4 class="card-title">Thank You for Registering!</h4>
            <p class="card-text">Your registration has been successfully submitted. You will receive a confirmation email shortly with all the details.</p>
            <p class="card-text">If you have any questions, please don't hesitate to contact us.</p>
            <div class="mt-4">
                <a href="/" class="btn btn-primary">Return to Home</a>
                <a href="/courses" class="btn btn-outline-primary ms-2">Browse More Courses</a>
            </div>
        </div>
        <div class="card-footer text-muted">
            Registration ID: #{{ "now"|date("YmdHis") }}
        </div>
    </div>
{% endblock %}