{% extends 'base.html.twig' %}

{% block content %}
    <h1 class="mb-4">All Training Courses</h1>
    
    {% if courses is empty %}
        <div class="alert alert-info">
            No courses available at the moment.
        </div>
    {% else %}
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            {% for course in courses %}
                <div class="col">
                    <div class="card h-100">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="card-title mb-0">{{ course.title }}</h5>
                            {% if course.isPromoted %}
                                <span class="badge badge-promoted">Promoted</span>
                            {% endif %}
                        </div>
                        <div class="card-body">
                            <p class="card-text">{{ course.description }}</p>
                        </div>
                        <div class="card-footer">
                            <a href="/register/{{ course.id }}" class="btn btn-primary">Register Now</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}
    
    <div class="mt-4">
        <a href="/search" class="btn btn-outline-primary">Search Courses</a>
    </div>
{% endblock %}